{{#extend "layout"}}
    {{#content "body"}}
        
        {{#each jobs}}
            <div class="job {{#if isPassing}}job--passing{{/if}}">
                name : {{name}}
                url : {{url}}
                last checked : {{ago lastRun}}
                status : {{status}}
                {{#if statusDate}}
                    status date : {{ago statusDate}}    
                {{/if}}
                {{isPassing}}
            </div>
        {{/each}}
        
    {{/content}}
{{/extend}}